{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        
        "jsx": "react",
        "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
        "types": ["node"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "target": "es2018",
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"]
}
